pipeline {
    agent any

    stages {
        stage('Instalação docker'){
            steps{
                script{
                    RUN curl -fsSLO https://get.docker.com/builds/Linux/x86_64/docker-17.04.0-ce.tgz \
                    && tar xzvf docker-17.04.0-ce.tgz \
                    && mv docker/docker /usr/local/bin \
                    && rm -r docker docker-17.04.0-ce.tgz
                }
            }
        }

        stage('Preparação') {
            steps {
                script {
                    echo "Preparando o ambiente Docker..."
                    sh "docker build -f testes.dockerfile -t coberturateste ."
                }
            }
        }

        stage('Rodar Testes') {
            steps {
                script {
                    echo "Executando os testes dentro do contêiner Docker..."
                    sh "docker run --rm -v %cd%/test-results:/app/test-results coberturateste poetry run pytest --junitxml=/app/test-results/results.xml"
                }
            }
        }
    }
}
