pipeline {
    agent any

    stages {
        stage('Baixando o repositorio') {
            steps {
                git 'https://github.com/AmarildoZoletJunior/TCCPrivado'

            }
        }
        stage('Instalando dependÃªncias'){
            steps{
                sh 'python3 -m venv .venv'
                sh 'pip3 install poetry --break-system-packages'
            }
        }
        stage('Instalando bibliotecas'){
            steps{
                sh 'poetry install'
            }
        }
       stage('Rodando testes'){
            steps{
                sh 'poetry run pytest --junitxml=results.xml'
            }
        }
    }
    post {
        always {
            junit skipPublishingChecks: true, testResults: 'results.xml'
        }
    }
}
