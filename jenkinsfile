pipeline {
    agent any

    stages {
        stage('Preparação') {
            steps {
                script {
                    echo "Preparando o ambiente Docker..."
                    sh "docker build -f testes.dockerfile -t coberturateste ."
                }
            }
        }

        stage('Rodar Testes') {
            steps {
                script {
                    echo "Executando os testes dentro do contêiner Docker..."
                    sh "docker run --rm -v %cd%/test-results:/app/test-results coberturateste poetry run pytest --junitxml=/app/test-results/results.xml"
                }
            }
        }
    }
}
